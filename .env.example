# DB
POSTGRES_DB=schedule
POSTGRES_USER=schedule
POSTGRES_PASSWORD=password123
DATABASE_URL=postgresql+psycopg://schedule:password123@db:5432/schedule
DATABASE_URL_LOCAL=postgresql+psycopg://schedule:password123@localhost:5432/schedule

# ==== Redis / Celery ====
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_BACKEND_URL=redis://redis:6379/1

# ==== Bot / API ====
TELEGRAM_BOT_TOKEN=тут_телеграм_токен
# Режим бота: polling для локалки (webhook можно подключить позже за nginx)
BOT_MODE=polling

# ==== Параметры расписания ====
SLOT_DURATION_MIN=45
REMINDER_MINUTES_BEFORE=30
MORNING_POLL_CRON=30 7 * * *          # опрос учителей в 07:30 локального TZ

# ==== Таймзона контейнеров ====
TZ=Europe/Moscow

# ==== Опционально: CORS для API (если фронт будет отдельно) ====
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==== Логин пароль для веб админки ====
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
SECRET_KEY=dev-secret-please-change

# Подставьте адрес вашего API (схема+хост+порт)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000